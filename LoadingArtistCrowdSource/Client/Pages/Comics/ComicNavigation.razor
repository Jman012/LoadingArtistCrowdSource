<div class="d-flex flex-row w-100 align-items-center justify-content-center mb-3">
	<NavLink href="@($"/comic/{Uri.EscapeDataString(ComicPage.FirstComicCode ?? "")}")" class="@($"btn btn-outline-primary mr-2 {(_showFirst ? "" : "disabled")}")" title="First">
		<Icon Name="@("fa-angle-double-left")"></Icon>
		<span class="sr-only">First Comic</span>
	</NavLink>
	<NavLink href="@($"/comic/{Uri.EscapeDataString(ComicPage.PreviousComicCode ?? "")}")" class="@($"btn btn-outline-primary mr-2 {(_showPrevious ? "" : "disabled")}")" title="Previous">
		<Icon Name="@("fa-angle-left")"></Icon>
		<span class="sr-only">Previous Comic</span>
	</NavLink>
	<NavLink href="/random" class="btn btn-outline-primary mr-2" title="Random Comic">
		<Icon Name="IconName.Random"></Icon>
		<span class="sr-only">Random Comic</span>
	</NavLink>
	<NavLink href="@($"/comic/{Uri.EscapeDataString(ComicPage.NextComicCode ?? "")}")" class="@($"btn btn-outline-primary mr-2 {(_showNext ? "" : "disabled")}")" title="Next">
		<Icon Name="@("fa-angle-right")"></Icon>
		<span class="sr-only">Next Comic</span>
	</NavLink>
	<NavLink href="@($"/comic/{Uri.EscapeDataString(ComicPage.LatestComicCode ?? "")}")" class="@($"btn btn-outline-primary mr-2 {(_showLatest || IsComicList ? "" : "disabled")}")" title="Latest">
		<Icon Name="@("fa-angle-double-right")"></Icon>
		<span class="sr-only">Latest Comic</span>
	</NavLink>
</div>

@code {
	[Parameter]
	public ComicPageViewModel ComicPage { get; set; } = new ComicPageViewModel();
	[Parameter]
	public bool IsComicList { get; set; }

	private bool _showFirst => ComicPage.FirstComicCode != null && ComicPage.ComicViewModel.Code != ComicPage.FirstComicCode;
	private bool _showPrevious => ComicPage.PreviousComicCode != null && ComicPage.ComicViewModel.Code != ComicPage.PreviousComicCode;
	private bool _showNext => ComicPage.NextComicCode != null && ComicPage.ComicViewModel.Code != ComicPage.NextComicCode;
	private bool _showLatest => ComicPage.LatestComicCode != null && ComicPage.ComicViewModel.Code != ComicPage.LatestComicCode;
}
