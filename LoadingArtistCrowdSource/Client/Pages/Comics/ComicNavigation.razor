<div class="d-flex flex-row w-100 align-items-center justify-content-center mb-3">
	<NavLink href="@($"/comic/{Uri.EscapeDataString(ComicPage.FirstComicCode ?? "")}")" 
			 class="@($"btn btn-outline-primary mr-2 {(_showFirst ? "" : "disabled")}")" 
			 title="First comic">
		<SemanticIcon Name="chevrons-left" Title="First comic" />
	</NavLink>
	<NavLink href="@($"/comic/{Uri.EscapeDataString(ComicPage.PreviousComicCode ?? "")}")" 
			 class="@($"btn btn-outline-primary mr-2 {(_showPrevious ? "" : "disabled")}")" 
			 title="Previous comic">
		<SemanticIcon Name="chevron-left" Title="Previous comic" />
	</NavLink>
	<NavLink href="/random" 
			 class="btn btn-outline-primary mr-2" 
			 title="Random Comic">
		<SemanticIcon Name="shuffle" Title="Random comic" />
	</NavLink>
	<NavLink href="@($"/comic/{Uri.EscapeDataString(ComicPage.NextComicCode ?? "")}")" 
			 class="@($"btn btn-outline-primary mr-2 {(_showNext ? "" : "disabled")}")" 
			 title="Next comic">
		<SemanticIcon Name="chevron-right" Title="Next comic" />
	</NavLink>
	<NavLink href="@($"/comic/{Uri.EscapeDataString(ComicPage.LatestComicCode ?? "")}")" 
			 class="@($"btn btn-outline-primary mr-2 {(_showLatest || IsComicList ? "" : "disabled")}")" 
			 title="Latest comic">
		<SemanticIcon Name="chevrons-right" Title="Latest comic" />
	</NavLink>
</div>

@code {
	[Parameter]
	public ComicPageViewModel ComicPage { get; set; } = new ComicPageViewModel();
	[Parameter]
	public bool IsComicList { get; set; }

	private bool _showFirst => ComicPage.FirstComicCode != null && ComicPage.ComicViewModel.Code != ComicPage.FirstComicCode;
	private bool _showPrevious => ComicPage.PreviousComicCode != null && ComicPage.ComicViewModel.Code != ComicPage.PreviousComicCode;
	private bool _showNext => ComicPage.NextComicCode != null && ComicPage.ComicViewModel.Code != ComicPage.NextComicCode;
	private bool _showLatest => ComicPage.LatestComicCode != null && ComicPage.ComicViewModel.Code != ComicPage.LatestComicCode;
}
