<div class="d-flex flex-row w-100 align-items-center justify-content-center mb-3">
	<NavLink href="@($"/comic/{System.Web.HttpUtility.UrlEncode(ComicPage.FirstComicCode)}")" class="@($"btn btn-outline-primary mr-2 {(ShowFirst ? "" : "disabled")}")" title="First">
		<Icon Name="@("fa-angle-double-left")"></Icon>
	</NavLink>
	<NavLink href="@($"/comic/{System.Web.HttpUtility.UrlEncode(ComicPage.PreviousComicCode)}")" class="@($"btn btn-outline-primary mr-2 {(ShowPrevious ? "" : "disabled")}")" title="Previous">
		<Icon Name="@("fa-angle-left")"></Icon>
	</NavLink>
	<NavLink href="/random" class="btn btn-outline-primary mr-2" title="Random Comic">
		<Icon Name="IconName.Random"></Icon>
	</NavLink>
	<NavLink href="@($"/comic/{System.Web.HttpUtility.UrlEncode(ComicPage.NextComicCode)}")" class="@($"btn btn-outline-primary mr-2 {(ShowNext ? "" : "disabled")}")" title="Next">
		<Icon Name="@("fa-angle-right")"></Icon>
	</NavLink>
	<NavLink href="@($"/comic/{System.Web.HttpUtility.UrlEncode(ComicPage.LatestComicCode)}")" class="@($"btn btn-outline-primary mr-2 {(ShowLatest || IsComicList ? "" : "disabled")}")" title="Latest">
		<Icon Name="@("fa-angle-double-right")"></Icon>
	</NavLink>
</div>

@code {
	[Parameter]
	public ComicPageViewModel ComicPage { get; set; } = new ComicPageViewModel();
	[Parameter]
	public bool IsComicList { get; set; }

	private bool ShowFirst => ComicPage.FirstComicCode != null && ComicPage.ComicViewModel.Code != ComicPage.FirstComicCode;
	private bool ShowPrevious => ComicPage.PreviousComicCode != null && ComicPage.ComicViewModel.Code != ComicPage.PreviousComicCode;
	private bool ShowNext => ComicPage.NextComicCode != null && ComicPage.ComicViewModel.Code != ComicPage.NextComicCode;
	private bool ShowLatest => ComicPage.LatestComicCode != null && ComicPage.ComicViewModel.Code != ComicPage.LatestComicCode;
}
