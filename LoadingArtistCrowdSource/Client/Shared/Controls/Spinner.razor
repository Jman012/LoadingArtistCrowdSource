@if (Inline)
{
	<div class="@($"spinner-border {_css}")" role="status">
		<span class="sr-only">Loading...</span>
	</div>
}
else
{
	<div class="d-flex justify-content-center">
		<div class="@($"spinner-border {_css}")" role="status">
			<span class="sr-only">Loading...</span>
		</div>
	</div>
}

@code {
	[Parameter]
	public bool Small { get; set; }
	[Parameter]
	public bool Inline { get; set; }

	private string _css
	{
		get
		{
			if (Small) return "spinner-border-sm";
			return "";
		}
	}
}
